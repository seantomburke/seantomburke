# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4

# JavaScript, TypeScript, JSON, YAML, Markdown
[*.{js,ts,json,yml,yaml,md}]
indent_style = space
indent_size = 2

# HTML, CSS
[*.{html,css}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2

# Makefile
[Makefile]
indent_style = tab

# YAML files
[*.yml]
indent_style = space
indent_size = 2
